generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// user model
model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String?
  lastName String?
  emailAddress String @unique
  password String
  imageURL String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projects Projects[]
  educations Educations[]
  certifications Certifications[]
  jobs Jobs[]
  skills Skills[]
  resetToken String?
  resetTokenUsed Boolean @default(false)
}

// project model
model Projects {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  projectLink String
  projectTag ProjectTag? @relation(fields: [projectTagId], references: [id])
  projectTagId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

// project tag model
model ProjectTag {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  projects Projects[]
}

// education model
model Educations {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  instituteName String
  degreeName String
  instituteLocation String
  startDate DateTime
  endDate DateTime?
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

// certification model
model Certifications {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  certificationTitle String
  certificationLink String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  startDate DateTime
  endDate DateTime?
  isPublished Boolean @default(true)
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

// jobs model
model Jobs {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  companyName String
  startDate DateTime
  endDate DateTime?
  role String
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

// skill model
model Skills {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  skillTitle String
  imageURL String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

// contact model
model Contacts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  message String
  emailAddress String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}