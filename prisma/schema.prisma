generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// skill model
model Skills {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  skillTitle String
  createdAt DateTime @default(now())
}

// project model
model Projects {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  projectDescription String
  projectLink String
  techStack String[]
  createdAt DateTime @default(now())
}

// certification model
model Certifications {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  issuer String
  certificationLink String
  dateIssued DateTime
  createdAt DateTime @default(now())
}